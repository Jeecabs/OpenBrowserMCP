{
  "name": "browser-mcp-extension",
  "displayName": "Browser MCP",
  "version": "0.1.0",
  "description": "Chrome extension that connects to Browser MCP server for AI-assisted browser control",
  "author": "Browser MCP Team",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "^0.89.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@toon-format/toon": "file:../toon/packages/toon"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.3.3"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
}
