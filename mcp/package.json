{
  "name": "openbrowsermcp",
  "version": "0.1.0",
  "description": "MCP server for browser automation - control your browser with AI",
  "author": "Lachlan Jacobs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jeecabs/OpenBrowserMCP"
  },
  "type": "module",
  "bin": {
    "openbrowsermcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src/index.ts --format esm && shx chmod +x dist/*.js",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@toon-format/toon": "^2.1.0",
    "ws": "^8.18.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.0",
    "shx": "^0.3.4",
    "tsup": "^8.4.0",
    "typescript": "^5.6.2"
  }
}
